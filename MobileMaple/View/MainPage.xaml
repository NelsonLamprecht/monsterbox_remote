<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true"
    x:Class="MobileMaple.View.MainPage"
    Title="Maple Servers">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Select a server:" TextColor="Black" FontSize="Medium" Margin="0,0,0,10" />
            
            <Button x:Name="btnLed" Text="RGB LED Controller" Clicked="BtnLedClicked" HeightRequest="60"
                TextColor="White" BackgroundColor="{StaticResource ButtonActive}" />

            <Button x:Name="btnServo" Text="Servo Controller" Clicked="BtnServoClicked" HeightRequest="60"
                TextColor="White" BackgroundColor="{StaticResource ButtonActive}" />

            <Button x:Name="btnAnalogTemperature" Text="Temperature Controller" Clicked="BtnTemperatureClicked" HeightRequest="60"
                TextColor="White" BackgroundColor="{StaticResource ButtonActive}" />
            
            <Label Text="By Wilderness Labs" TextColor="Black" 
                HorizontalOptions="Center" VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>